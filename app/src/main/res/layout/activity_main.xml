<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="skip2CustomView"
        android:text="Button"
    />
    <ImageView
        android:id="@+id/iv"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <com.purang.justdoit.custom_view.MyView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
    />
    <com.purang.justdoit.custom_view.MyViewGroup01
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:background="#ff0">

        <com.purang.justdoit.custom_view.MyViewGroup02
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="#345444"
        >

            <com.purang.justdoit.custom_view.MyView2
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="#998444"
            />
        </com.purang.justdoit.custom_view.MyViewGroup02>


    </com.purang.justdoit.custom_view.MyViewGroup01>


</LinearLayout>